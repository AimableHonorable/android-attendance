<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gladStart"
    tools:context=".StudentsList"
    >
    <LinearLayout
        android:id="@+id/llay_student_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Students list"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/llay_student_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llay_list">

        <ListView
            android:id="@+id/lv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </LinearLayout>
    <Button
        android:id="@+id/save_attendance"
        android:layout_below="@id/llay_list"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="25dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:background="@drawable/et_bg"
        android:backgroundTint="@color/colorAccent"

        />

</RelativeLayout>