<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="regno"
            android:id="@+id/tv_regNo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/tv_stCard"
            android:layout_toEndOf="@id/tv_regNo"
            android:layout_toRightOf="@id/tv_regNo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/tv_wId"
            android:layout_toEndOf="@id/tv_stCard"
            android:layout_toRightOf="@id/tv_stCard"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="1"
            android:textOff="0"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/tv_wId"
            android:layout_toRightOf="@id/tv_wId"
            android:id="@+id/sw_student"/>
    </RelativeLayout>

</LinearLayout>
